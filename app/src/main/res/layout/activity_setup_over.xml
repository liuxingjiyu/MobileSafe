<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/TitleStyle"
        android:text="手机防盗"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="安全号码"
            android:textColor="#272822"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_safe_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="#272822"
            android:text="12345678909"
            android:textSize="20sp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88000000"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="防盗保护是否开启"
            android:textColor="#272822"
            android:textSize="20sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/lock"
            android:layout_marginRight="60dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#88000000"/>

    <TextView
        android:id="@+id/tv_enter_setup"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:background="@drawable/selector_enter_setup_bg"
        android:text="重新进入设置向导页面"
        android:textSize="16sp"
        android:textColor="#272822"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#99000000"
        android:paddingLeft="15dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp"
        android:text="功能介绍"
        android:textSize="18sp"
        android:textColor="#fff"/>

    <TextView
        style="@style/TextViewItem"
        android:text="SIM卡变更报警"
        android:textColor="#272822"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"/>
    <TextView
        style="@style/TextViewItem"
        android:text="GPS追踪:#*location*#"
        android:textColor="#272822"
        android:padding="5dp"/>
    <TextView
        style="@style/TextViewItem"
        android:text="播放报警音乐:#*alarm*#"
        android:textColor="#272822"
        android:padding="5dp"/>
    <TextView
        style="@style/TextViewItem"
        android:text="远程锁屏:#*lockscreen*#"
        android:textColor="#272822"
        android:padding="5dp"/>
    <TextView
        style="@style/TextViewItem"
        android:text="远程数据销毁:#*wipedata*#"
        android:textColor="#272822"
        android:padding="5dp"/>
</LinearLayout>