<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#4A86CE</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="preBtn">
        <item name="android:text">上一页</item>
        <item name="android:textColor">#fff</item>
        <item name="android:onClick">prePage</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:drawableLeft">@drawable/left_arrow</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="nextBtn">
        <item name="android:text">下一页</item>
        <item name="android:textColor">#fff</item>
        <item name="android:onClick">nextPage</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:drawableRight">@drawable/right_arrow</item>
        <item name="android:background">@drawable/selector_next_btn_bg</item>
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="TextViewItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableLeft">@drawable/notice</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AddressDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="android:windowAnimationStyle">@style/AddressAnimationDialog</item>-->
        <!-- 设置背景为黑色 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 默认是透明色 -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
        <!-- 没有标题头 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 点击对话框的后面，对话框消失 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

</resources>
